<div class="col-md-10 col-md-offset-1">
  <h3>當日入住名單</h3>
  <!--日期搜尋功能(含顯示月曆功能)-->
  <%= render partial: "common/searchday", locals:{search_path: daily_orders_path, search_date: @search_date} %>

  <table class="table table-bordered table-hover">
    <thead>
      <tr class="active">
        <th>姓名</th>
        <th>手機</th>
        <th>國籍</th>
        <th>身分證/護照</th>
        <th>生日</th>
        <th>地址</th>
        <th>email</th>
        <th>提醒(外)</th>
        <th>備註(內)</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
          <tr data-link="<%= order_path(order) %>">
            <td><%= order.client.name %></td>
            <td><%= order.client.mobile %></td>
            <td><%= order.client.country %></td>
            <td><%= order.client.id_no %></td>
            <td><%= order.client.birthday %></td>
            <td><%= order.client.address %></td>
            <td><%= order.client.email %></td>
            <td><%= order.client.reminder %></td>
            <td><%= order.client.note %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">

$("tr[data-link]").click(function() {
  window.location = $(this).data("link")
});

</script>
