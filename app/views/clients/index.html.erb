<div class="col-md-10 col-md-offset-1">
  <h2>所有客戶列表</h2>
  <div class="group">
    <%= link_to("新增客戶", new_client_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-bordered table-hover">
    <thead>
      <tr class="active">
        <th>姓名</th>
        <th>性別</th>
        <th>手機</th>
        <th>國籍</th>
        <th>身分證/護照</th>
        <th>生日</th>
        <th>電話</th>
        <th>地址</th>
        <th>職業</th>
        <th>提醒(外)</th>
        <th>備註(內)</th>
        <th>功能</th>
      </tr>
    </thead>
    <tbody>
       <%= render partial: "client", collection: @clients %>
    </tbody>
  </table>
</div>
