<div class="col-md-10 col-md-offset-1">
  <h2>搜尋客戶列表</h2>
  <div class="form-group search-form">
    <%= form_with url: search_clients_path, method: :get, local: true do |f| %>
      <%= f.label :search_name, "客戶名稱:" %>
      <%= f.text_field :search_name, value: @search_name %>
      <%= f.label :search_mobile, "客戶手機:" %>
      <%= f.text_field :search_mobile, value: @search_mobile %>
      <%= f.submit "查詢", class: "btn btn-primary" %>
    <% end %>
  </div>

  <table class="table table-bordered table-hover">
    <thead>
      <tr class="active">
        <th>姓名</th>
        <th>性別</th>
        <th>手機</th>
        <th>國籍</th>
        <th>身分證/護照</th>
        <th>生日</th>
        <th>電話</th>
        <th>地址</th>
        <th>職業</th>
        <th>提醒(外)</th>
        <th>備註(內)</th>
        <th>功能</th>
      </tr>
    </thead>
    <tbody>
       <%= render partial: "client", collection: @clients %>
    </tbody>
  </table>
</div>
