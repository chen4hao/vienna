        <th width="7%">201<br/>迎曦六人房</th>
        <th width="7%">202<br/>迎曦六人房</th>
        <th width="7%">203<br/>迎曦六人房</th>
        <th width="7%">205<br/>豪華八人房</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "room_calendar", collection: @room_calendars %>
    </tbody>
  </table>
</div>

