
<div class="col-md-4 col-md-offset-4">
  <h2>新增使用者</h2>

  <hr>
  <%= simple_form_for @user, url: admin_users_path do |f| %>
    <div class="form-user">
      <%= f.input :email,
                  required: true,
                  autofocus: true ,
                  input_html: { class: "form-control"} %>
      <%= f.input :name, required: true, input_html: { class: "form-control"} %>
      <%= f.input :title, required: true, input_html: { class: "form-control"} %>
      <%= f.input :password, required: true, input_html: { class: "form-control"} %>
      <%= f.input :password_confirmation, required: true, input_html: { class: "form-control"} %>

    </div>
    <%= f.submit "新增", class: "btn btn-primary", data: { disable_with: "新增..." } %>
  <% end %>
</div>
