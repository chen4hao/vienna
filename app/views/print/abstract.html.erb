
<div class="col-md-6 col-md-offset-3">
  <div class="group">
    <%= link_to("輸出PDF", "#", onclick: "previewPrint()", class: "btn btn-primary pull-right") %>
    <!-- <input id="btnPrint" value="列印" type="button" onclick="previewPrint()";/> -->
  </div>

<!--startprint-->
  <h4>當日住宿簡表</h4>

  <table class="table table-bordered table-hover">
    <thead>
      <tr class="active">
        <th colspan="2"><%= render_fullday(@search_date) %></th>
      </tr>
    </thead>
    <tbody>
      <% @occupaied_rooms.each do |key, value| %>
        <tr>
          <td><%= key %></td>
          <td><%= value %></td>
        </tr>
      <% end %>
      <tr>
        <th colspan="2"><%= @empty_rooms %></th>
      </tr>

    </tbody>
  </table>
<!--endprint-->

</div>

<%= render "pdfpreview" %>

